pipeline {
    agent any

    parameters {
        booleanParam(name: 'DESTROY_INFRASTRUCTURE', defaultValue: false, description: 'Destroy infrastructure after deployment')
    }

    environment {
        AWS_REGION = "us-east-1"
        AWS_DEFAULT_REGION = "us-east-1"
        AWS_ENDPOINT_URL = "http://localstack:4566"
        AWS_ACCESS_KEY_ID = "test"
        AWS_SECRET_ACCESS_KEY = "test"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'test-pipeline', url: 'https://github.com/DevOpsMagicAWS/jenkins-aws-ci-cd-pipeline.git'
            }
        }

        stage('Wait for LocalStack') {
            steps {
                sh 'sleep 5'
                echo "Using existing LocalStack container from docker-compose"
            }
        }

        stage('Validate Terraform') {
            steps {
                dir('infra-tf') {
                    sh 'terraform init --input=false'
                    sh 'terraform validate'
                    sh 'terraform plan --out=tfplan.out'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('app') {
                    sh 'docker build -t demo-app:latest .'
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'bash scripts/deploy.sh'
            }
        }

        stage('Destroy (Optional)') {
            when {
                expression { params.DESTROY_INFRASTRUCTURE == true }
            }
            steps {
                sh 'bash scripts/destroy.sh'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
            sh 'docker stop localstack || true'
            sh 'docker rm localstack || true'
            cleanWs()
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}